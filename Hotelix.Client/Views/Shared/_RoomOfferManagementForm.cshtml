            </div>
        </div>*@

        <div class="form-group">
            <label asp-for="Room.StartTime" class="col-md-5 control-label"></label>
            <div class="col-md-8">
                <input asp-for="Room.StartTime" class="form-control" />
                <span asp-validation-for="Room.StartTime" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Room.EndTime" class="col-md-5 control-label"></label>
            <div class="col-md-8">
                <input asp-for="Room.EndTime" class="form-control" />
                <span asp-validation-for="Room.EndTime" class="text-danger"></span>
            </div>
        </div>
    </div>

</div>