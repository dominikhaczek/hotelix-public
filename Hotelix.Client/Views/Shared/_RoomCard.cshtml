@model RoomAddToOrderFormViewModel

<div class="col-sm-4 col-lg-4 col-md-4 vehicle-card mb-3">

    <div class="card">
        <img src="@Model.Room.ImageUrl" style="object-fit: cover; height: 190px;" class="card-img-top">
        <div class="card-body pt-0 px-0">
            <div class="d-flex flex-row justify-content-between mb-0 px-3 mt-3">
                <small class="text-muted mt-1">Pokój</small>
                <h6>@Model.Room.Name</h6>
            </div>
            <div class="d-flex flex-row justify-content-between mb-0 px-3 mt-3">
                <small class="text-muted mt-1">Lokalizacja</small>
                <h6>@Model.Room.Location</h6>
            </div>
            <hr class="mt-2 mx-3">
            <div class="d-flex flex-row justify-content-between px-3 pb-4">
                <div class="d-flex flex-column"><span class="text-muted">Cena/dobę</span></div>
                <div class="d-flex flex-column">
                    <h5 class="mb-0 text-right">@Model.Room.PricePerNight.ToString("#######.00 zł")</h5>
                </div>
            </div>
            <div class="d-flex flex-row justify-content-between p-3 mid mb-3">
                <div class="d-flex flex-column">
                    <small class="text-muted mb-1">Typ łóżka</small>
                    <div class="d-flex flex-row">
                        <img src="~/images/bed.png" width="35px" height="25px">
                        <div class="d-flex flex-column ml-1">
                            <small class="ghj">@Model.Room.BedType</small>
                        </div>
                    </div>
                </div>
                <div class="d-flex flex-column">
                    <small class="text-muted mb-2">Liczba gości</small>
                    <div class="d-flex flex-row" style="align-items: center;">
                        <img src="~/images/guests.png">
                        <h6 class="ml-1">@Model.Room.GuestLimit </h6>
                    </div>
                </div>
            </div>
            @if (ViewBag.DontShowBookButton is null)
            {
                <div class="mx-3 mb-2">
                    <a class="btn btn-danger btn-block"
                       asp-controller="OrderForm"
                       asp-action="AddRoomToOrderForm"
                       asp-route-roomId="@Model.Room.Id"
                       asp-route-startTime="@Model.StartTime.ToString("MM/dd/yyyy")"
                       asp-route-endTime="@Model.EndTime.ToString("MM/dd/yyyy")">
                        REZERWUJ
                    </a>
                </div>
            }

            <a asp-controller="Room"
               asp-action="Details"
               asp-route-id="@Model.Room.Id" class="d-flex justify-content-center text-muted">SZCZEGÓŁY</a>
        </div>
    </div>
</div>