@model Room

@{
    ViewData["Title"] = Model.Name;
}


<div class="card">
    <img src="@Model.ImageUrl" style="object-fit: cover; height: 400px;" class="card-img-top">

    <div class="card-body pt-0 px-0">
        <div class="row">
            <div class="col-md-12">
                <div class="d-flex flex-row justify-content-between mb-0 px-3 mt-3">
                    <h1><span class="badge badge-primary">@ViewData["Title"]</span></h1>
                    <h4>@Model.PricePerNight.ToString("#######.00 zł")/dobę<br/> <small>Doba hotelowa od 14:00 do 12:00</small></h4>
                    
                </div>
                <hr class="mt-2 mx-3">
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">

                <div class="d-flex flex-row justify-content-between mb-0 px-3">
                    <small class="text-muted mt-1">Łóżko</small>
                    <h5>@Model.BedType</h5>
                </div>

            </div>
            <div class="col-md-6">
                <div class="d-flex flex-row justify-content-between mb-0 px-3">
                    <small class="text-muted mt-1">Maksymalna liczba gości</small>
                    <h5>@Model.GuestLimit</h5>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="mid p-4">@Model.Description</div>
            </div>

        </div>
    </div>
</div>