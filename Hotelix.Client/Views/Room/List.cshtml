@model RoomListViewModel

@{
    ViewData["Title"] = "Wybierz pokój";
}

<h1>@ViewData["Title"]</h1>

<div class="jumbotron">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="List" method="get">
                <div class="row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group col-md-4">
                        <label asp-for="CurrentLocation" class="control-label"></label>
                        <div>
                            @*<input asp-for="CurrentLocation" class="form-control" />*@
                            <select asp-for="CurrentLocation" class="form-control" asp-items="ViewBag.LocationList"></select>
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        <label asp-for="StartTime" class="control-label"></label>
                        <div>
                            <input asp-for="StartTime" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        <label asp-for="EndTime" class="control-label"></label>
                        <div>
                            <input asp-for="EndTime" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group col-md-2 d-flex flex-row justify-content-center align-items-center">
                        <div>
                            <input type="submit" class="btn btn-primary" value="Szukaj" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="row">
    @foreach (var room in Model.Rooms)
    {
        <partial name="_RoomCard" model="@new RoomAddToOrderFormViewModel{ Room = room, EndTime = Model.EndTime, StartTime = Model.StartTime}" />
    }
</div>
