@model CreateUserViewModel
@{
    ViewData["Title"] = "Stwórz konto pracownika";
}

<div class="jumbotron">
    <h1>@ViewData["Title"]</h1>
    <form asp-action="Index" method="post" role="form">
        <div class="row mt-5">
            <div class="col-md-4">
                <h4>Dane konta</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>



            </div>
            <div class="col-md-4">
                <h4>Zabezpieczenia</h4>
                <hr />
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

            </div>
            <div class="col-md-4">
                <h4>Rola</h4>
                <hr />
                <div class="form-group">
                    <label asp-for="UserRole" class="col-md-4 control-label"></label>
                    <div class="col-md-8">
                        <select asp-for="UserRole" asp-items="@ViewBag.RolesList">
                        </select>
                        <span asp-validation-for="UserRole" class="text-danger"></span>
                    </div>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary float-right">Stwórz konto</button>
            </div>
        </div>
    </form>
</div>